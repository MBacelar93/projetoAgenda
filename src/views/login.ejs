<%- include('includes/head')%>
<%- include('includes/navbar')%>

<div class="container">
   <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8">
      <h1 class="text-center my-3">Cria uma conta ou faça Login </h1>

<%- include ('includes/messages'); %>

       <div class="row">
        
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>

          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Novo e-mail</label>
              <input type="email" class="form-control" name="email" placeholder="Insira um novo e-mail">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Nova senha</label>
              <input type="password" class="form-control" name="password" placeholder="Insira uma nova senha">
            </div>
            <button type="submit" class="btn btn-primary">Criar</button>
          </form>
        </div>
        
        <div class="col-lg">
          <h4>Fazer Login</h4>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Insira seu e-mail</label>
              <input type="email" class="form-control" name="email" placeholder="Insira seu e-mail">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Insira sua senha</label>
              <input type="password" class="form-control" name="password" placeholder="Insira sua senha">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
       </div>
      </div>

    <div class="col-lg-2"></div>

</div>
<%- include('includes/footer')%>


